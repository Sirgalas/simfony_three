{% extends 'main/base.html.twig' %}

{% block body %}
    <div class="col-12 col-lg-6 col-md-6">
        <h1 class="display-4 text-center">{{ title }}</h1>
    </div>
    <div class="col-12 text-center mt-5">
        <div id="app">
            <h1 class="display-1 text-center">[[ message ]]</h1>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script>
        let app = new Vue({
            el:'#app',
            data:{
                message:"Hello World!"
            }
        });
    </script>
{% endblock %}
