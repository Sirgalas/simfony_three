{% extends 'admin/base.html.twig' %}
{% block title %}Пользователи{% endblock %}
{% block body %}
    <h1 class="text-center">User index</h1>
    <div class="col-12 mb-5 text-right">
        <a href="{{ path('admin_user_new') }}" class="btn btn-success btn-lg">Создать нового</a>
    </div>
    <div class="col-12">
        <table class="table table-striped shadow-lg bg-white rounded table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}"><i class="fas fa-glasses"></i></a>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>




{% endblock %}
